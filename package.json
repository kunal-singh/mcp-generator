{
  "name": "create-mcp",
  "version": "0.1.0",
  "description": "Scaffold a new Model Context Protocol (MCP) server",
  "type": "module",
  "bin": {
    "create-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "template"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --no-warn-ignored",
    "lint:fix": "eslint . --fix --no-warn-ignored",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "tsup",
    "setup": "lefthook install",
    "check:branch": "bash scripts/check-branch-name.sh"
  },
  "keywords": [
    "mcp",
    "create",
    "scaffold",
    "model-context-protocol",
    "cli"
  ],
  "author": "Kunal Singh",
  "license": "MIT",
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "lefthook": "^2.1.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.55.0"
  },
  "lint-staged": {
    "**/*.{ts,js,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.ts": [
      "eslint --cache --fix"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
